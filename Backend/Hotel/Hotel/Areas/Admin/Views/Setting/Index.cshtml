@model List<Setting>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Address</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{ 
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>
                                   @Html.Raw(item.Address)</td>

                                <td>
                                    <a class="btn btn-success" asp-area="Admin" asp-controller="Setting" asp-action="Update" asp-route-id="@item.Id" >Edit</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
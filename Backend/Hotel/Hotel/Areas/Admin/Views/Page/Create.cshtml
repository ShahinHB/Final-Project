@model VmAdminPage
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Page" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Page.Title" class="form-label">Page Name (Must be the same as the controller name)</label>
                    <input class="form-control" asp-for="@Model.Page.Name">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Page.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Page.Title">
                    <span asp-validation-for="@Model.Page.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Page.Subtitle" class="form-label">Subtitle</label>
                    <input class="form-control" asp-for="@Model.Page.Subtitle">
                    <span asp-validation-for="@Model.Page.Subtitle" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Page.ImageFile" class="form-label" accept="image/*">Background Image</label>
                    <input class="form-control" asp-for="@Model.Page.ImageFile" type="file"/>
                    <span asp-validation-for="@Model.Page.ImageFile" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-area="Admin" asp-controller="Page" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>

@model VmAdminPage
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Page" asp-action="Update" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Page.Title" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Page.Title">
                    <span asp-validation-for="@Model.Page.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Page.Subtitle" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Page.Subtitle">
                    <span asp-validation-for="@Model.Page.Subtitle" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Page.ImageFile" class="form-label">Price</label>
                    <input class="form-control" asp-for="@Model.Page.ImageFile">
                    <span asp-validation-for="@Model.Page.ImageFile" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-area="Admin" asp-controller="Page" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>

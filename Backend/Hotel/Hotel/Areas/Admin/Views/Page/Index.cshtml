@model VmAdminPageList
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Page" asp-action="Create">Create</a>
        </div>
        <hr />

        <div class="col-lg-12 mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Subtitle</th>
                        <th scope="col">Background-Image</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;
                        foreach (var item in Model.Pages)
                        {
                            i++;
                            <tr>
                                <th scope="row">@i</th>
                                <td>@item.Title</td>
                                <td>@item.Subtitle</td>
                                <td>
                                    <img src="~/Uploads/@item.ImageName" style="object-fit:contain; height: 100px;" alt="Alternate Text" />
                                </td>
                                <td>
                                    <a class="btn btn-success" asp-area="Admin" asp-controller="Page" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Page" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

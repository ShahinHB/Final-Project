@model AdminPanelUser
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="card card-box">
            <div class="card-head">
                <header>Validation with Icons</header>
            </div>
            <div class="card-body" id="bar-parent2">
                <form asp-area="Admin" asp-controller="Account" asp-action="Edit" id="form_sample_2" class="form-horizontal" method="post">
                    <div class="form-body">
                        <div class="form-group row  margin-top-20">
                            <label class="control-label col-md-3">
                                Name
                            </label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <input type="text" asp-for="@Model.Name" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group row  margin-top-20">
                            <label class="control-label col-md-3">
                                Surname
                            </label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <input type="text" asp-for="@Model.Surname" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group row  margin-top-20">
                            <label class="control-label col-md-3">
                                Address
                            </label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <input type="text" asp-for="@Model.Address" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">
                                Email
                            </label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <input type="text" asp-for="@Model.Email" class="form-control"/>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">
                                Phone
                            </label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <input type="text" asp-for="@Model.PhoneNumber" class="form-control"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="offset-md-3 col-md-9">
                            <button type="submit" class="btn btn-info">Submit</button>
                            <a type="button" asp-area="Admin" asp-controller="Account" asp-action="Profile" asp-route-id="@Model.Id" class="btn btn-default">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
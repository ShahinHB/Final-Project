@model VmAccount
@inject UserManager<IdentityUser> userManager
@inject AppDbContext _context;

@{
    Layout = null;
}

<!DOCTYPE html>
<html>


<!-- Mirrored from www.einfosoft.com/templates/admin/spice/source/lock_screen.html by HTTrack Website Copier/3.x [XR&CO'2014], Fri, 18 Feb 2022 08:09:38 GMT -->
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta name="description" content="Responsive Admin Template" />
    <meta name="author" content="SmartUniversity" />
    <title>Spice Hotel | Bootstrap 4 Admin Dashboard Template + UI Kit</title>
    <!-- icons -->
    <link href="~/Areas/assets/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Areas/assets/plugins/iconic/css/material-design-iconic-font.min.css">
    <!-- bootstrap -->
    <link href="~/Areas/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- style -->
    <link rel="stylesheet" href="~/Areas/assets/css/pages/extra_pages.css">
    <!-- favicon -->
    <link rel="shortcut icon" href="~/Areas/assets/img/favicon.ico" />
</head>

<body>
    @{
        var imageName = _context.AdminPanelUsers.FirstOrDefault(a => a.Id == userManager.GetUserId(User)).Image;
        var Name = _context.AdminPanelUsers.FirstOrDefault(a => a.Id == userManager.GetUserId(User)).Name;
        var Surname = _context.AdminPanelUsers.FirstOrDefault(a => a.Id == userManager.GetUserId(User)).Surname;
    }
    <div class="limiter">
        <div class="container-login100 page-background">
            <div class="wrap-login100">
                <form class="login100-form validate-form" asp-area="Admin" asp-controller="Account" asp-action="Login"  method="post">
                    <span class="login100-form-logo">
                        <img src="~/Uploads/@imageName" class="imgroundcorners " alt="John Doe">
                    </span>

                    <span class="login100-form-title  p-t-27">
                        @Name @Surname
                    </span>
                    <input type="hidden" asp-for="@Model.UserName" value="@userManager.GetUserName(User)" />
                    <p class="text-center txt-locked">
                        Locked
                    </p>
                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <input class="input100" type="password" asp-for="@Model.Password" placeholder="Password">
                        <span class="focus-input100" data-placeholder="&#xf191;"></span>
                    </div>
                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Login
                        </button>
                    </div>
                    <div class="text-center p-t-27">
                        <a asp-area="Admin" asp-controller="Account" asp-action="Login">
                            sign in as a different user
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- start js include path -->
    <script src="~/Areas/assets/plugins/jquery/jquery.min.js"></script>
    <!-- bootstrap -->
    <script src="~/Areas/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Areas/assets/js/pages/extra_pages/login.js"></script>
    <!-- end js include path -->
</body>



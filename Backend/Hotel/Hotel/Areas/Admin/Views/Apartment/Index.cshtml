@model VmAdminApartmentList
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Apartment" asp-action="Create">Create</a>
        </div>
        <hr />

        <div class="col-lg-12 mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Subtitle</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;
                        foreach (var item in Model.Apartments)
                        {
                            i++;
                            <tr>
                                <th scope="row">@i</th>
                                <td>@item.Title</td>
                                <td>@item.Subtitle</td>
                                <td>
                                    <a class="btn btn-info" asp-area="Admin" asp-controller="Apartment" asp-action="CreateImage" asp-route-id="@item.Id">Add Image</a>
                                    <a class="btn btn-success" asp-area="Admin" asp-controller="Apartment" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Apartment" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>


@model Apartment
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-bar">
    <div class="page-title-breadcrumb">
        <div class=" pull-left">
            <div class="page-title">Add Apartment</div>
        </div>
        <ol class="breadcrumb page-breadcrumb pull-right">
            <li>
                <i class="fa fa-home"></i>&nbsp;<a class="parent-item"
                                                   asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a class="parent-item" asp-area="Admin" asp-controller="Apartment" asp-action="Index">Apartment</a>&nbsp;<i class="fa fa-angle-right"></i>
            </li>
            <li class="active">Add Apartment</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <div class="card-head">
                <header>Add Room Booking</header>
            </div>
            <form asp-area="Admin" asp-controller="Apartment" asp-action="Update" method="post">
                <div class="card-body row">
                    <div class="col-lg-6 p-t-20">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                            <input class="mdl-textfield__input" asp-for="@Model.Title">
                            <label class="mdl-textfield__label">Title</label>
                        </div>
                    </div>
                    <div class="col-lg-6 p-t-20">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                            <input class="mdl-textfield__input" asp-for="@Model.Subtitle">
                            <label class="mdl-textfield__label">Subtitle</label>
                        </div>
                    </div>
                    <div class="col-lg-3 p-t-20">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                            <input class="mdl-textfield__input" asp-for="@Model.Limit">
                            <label class="mdl-textfield__label">Accomodates</label>
                        </div>
                    </div>
                    <div class="col-lg-3 p-t-20">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                            <input class="mdl-textfield__input" asp-for="@Model.Size">
                            <label class="mdl-textfield__label">Size</label>
                        </div>
                    </div>
                    <div class="col-lg-3 p-t-20">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                            <input class="mdl-textfield__input" asp-for="@Model.BedCount">
                            <label class="mdl-textfield__label">Bed Count</label>
                        </div>
                    </div>
                    <div class="col-lg-3 p-t-20">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                            <input class="mdl-textfield__input" asp-for="@Model.Price">
                            <label class="mdl-textfield__label">Price For Day</label>
                        </div>
                    </div>
                    <div class="col-lg-12 p-t-20">
                        <div class="mdl-textfield mdl-js-textfield txt-full-width">
                            <textarea class="mdl-textfield__input" rows="4" asp-for="@Model.Info"></textarea>
                            <label class="mdl-textfield__label">Info</label>
                        </div>
                    </div>
                    <div class="col-lg-6 p-t-20">
                        <label asp-for="@Model.ApartmentToAmenityId" class="form-label">Features</label>
                        <select class="form-control mb-3 selectTwo" aria-label="Default select example" multiple="multiple" asp-for="@Model.ApartmentToAmenityId">
                            @foreach (var item in ViewBag.Amenity)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.ApartmentToAmenityId" class="text-danger"></span>
                    </div>
                    <style>
                        .selectTwo + span {
                            border: 1px solid #a6aeb1 !important;
                        }
                    </style>
                    <div class="col-lg-12 p-t-20 text-center">
                        <button type="submit"
                                class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 m-r-20 btn-pink">
                            Submit
                        </button>
                        <a asp-area="Admin" asp-controller="Apartment" asp-action="Index" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 btn-default">
                            Back to List
                        </a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>


